/*
    Q WIDGET
*/

QWidget {
    margin:0px;
}

/*
    Q LABEL
*/

QLabel {
    color:#f2f2f2;
    font-family:"Plus Jakarta Sans";
    font-size:14pt;
    font-weight:500;
    margin:0px;
}

/*
    Q COMBO BOX
*/

QComboBox {
    color:#f2f2f2;
    border-color:#262626;
    background-color:#191919;
    font-family:"Plus Jakarta Sans";
    font-size:14pt;
    font-weight:500;
    border-radius:8px;
    border-width:2px;
    border-style:solid;
    padding-left:8px;
    padding-top:4px;
    padding-right:8px;
    padding-bottom:4px;
    margin:0px;
    outline:none;
}

QComboBox:hover {
    background-color:#333333;
}

QComboBox:open {
    border-color:#6fa1fe;
}

QComboBox::drop-down {
    border:0px;
}

QComboBox::down-arrow {
    image:url(:/ui/icon/chevron-down-dark);
    width:14px;
    padding:0px;
    margin:0px;
    padding-right:8px;
}

QComboBox QAbstractItemView {
    border-color:#262626;
    background-color: #191919;
    border-radius:8px;
    border-width:2px;
    border-style:solid;
    margin:0px;
    padding:8px;
    outline:none;
}

QComboBox QAbstractItemView::item {
    border-color:#191919;
    background-color: #191919;
    border-radius:8px;
    border-width:2px;
    border-style:solid;
    margin:0px;
    padding:8px;
    outline:none;
}

QComboBox QAbstractItemView::item:hover {
    background-color:#333333;
}

QComboBox QAbstractItemView::item:selected {
    border-color:#6fa1fe;
}

/*
    Q SLIDER
*/

QSlider {
    margin:0px;
    padding:0px;
}

QSlider::handle:horizontal {
    border-color:#262626;
	background-color:#191919;
    border-width:2px;
    border-style:solid;
    width:8px;
    margin:-4px -4px;
    border-radius:4px;
}

QSlider::handle:horizontal:hover{
	background-color:#333333;
}

QSlider::groove:horizontal {
    border-color:#262626;
    background-color:#6fa1fe;
	border-radius:4px;
    border-width:2px;
    border-style:solid;
	height:4px;
	margin:0px;
	padding:0px;
}

QSlider::add-page:horizontal {
    border-color:#262626;
	background-color:#191919;
	border-radius:4px;
    border-width:2px;
    border-style:solid;
	height:4px;
	margin:0px;
	padding:0px;
}

QSlider::sub-page:horizontal {
    border-color:#262626;
	background-color:#6fa1fe;
	border-radius:4px;
    border-width:2px;
    border-style:solid;
	height:4px;
	margin:0px;
	padding:0px;
}

/*
    Q PUSH BUTTON
*/

QPushButton {
    color:#f2f2f2;
    border-color:#262626;
    background-color:#191919;
	font-family:"Plus Jakarta Sans";
    font-size:14pt;
    font-weight:500;
    border-radius:8px;
    border-width:2px;
    border-style:solid;
    margin:0px;
    padding-left:8px;
    padding-top:4px;
    padding-right:8px;
    padding-bottom:4px;
    outline:none;
}

QPushButton:hover {
    background-color:#333333;
}

QPushButton:pressed {
    border-color:#6fa1fe;
}

QPushButton:flat {
	background-color:transparent;
	border-color:transparent;
}

QPushButton:disabled {
    background-color:#333333;
    border-color:#333333;
    color:#808080;
}

/*
    Q VIDEO WIDGET
*/

QVideoWidget {
    background-color:#191919;
}

/*
    Q LINE EDIT
*/

QLineEdit {
    color:#f2f2f2;
    border-color:#262626;
    background-color:#191919;
	font-family:"Plus Jakarta Sans";
    font-size:14pt;
    font-weight:500;
    border-radius:8px;
    border-width:2px;
    border-style:solid;
    padding-left:8px;
    padding-top:4px;
    padding-right:8px;
    padding-bottom:4px;
    outline:none;
}

QLineEdit:hover {
    background-color:#333333;
    outline:none;
}

QLineEdit:focus {
    border-color:#6fa1fe;
    outline:none;
}

/*
    HEADER
 */

QWidget#Header {
    background-color:#0d0d0d;
    margin:0px;
}

QLabel#HeaderLogo {
    font-size:18pt;
    font-weight:700;
    margin-left:auto;
    margin-top:12px;
    margin-right:auto;
    margin-bottom:12px;
}

/*
    MAIN
*/

QMainWindow#MainWindow {
    background-color:#0d0d0d;
    margin:0px;
}

/*
    SETTINGS WINDOW
*/

QLabel#SettingsWindowItemLabel {
    font-size:12pt;
    margin-left:12px;
    margin-top:12px;
    margin-right:12px;
    margin-bottom:6px;
}

QComboBox#SettingsWindowComboBox {
    margin-left:12px;
    margin-top:0px;
    margin-right:12px;
    margin-bottom:0px;
}

QSlider#SettingsWindowSlider {
    margin-left:12px;
    margin-top:0px;
    margin-right:12px;
    margin-bottom:0px;
}

QPushButton#SettingsWindowResetButton {
    margin-left:12px;
    margin-top:24px;
    margin-right:12px;
    margin-bottom:0px;
}

/*
    CAPTURE WINDOW
*/

QLabel#CaptureWindowCountdownLabel {
    font-size:32pt;
    margin:12px;
}

QFrame#CaptureWindowFrame {
    border-color:#262626;
    background-color:#191919;
    border-radius:16px;
    border-width:2px;
    border-style:solid;
}

QPushButton#CaptureWindowCaptureButton {
    margin:12px;
}

/*
    POST WINDOW
*/

QFrame#PostWindowFrame {
    border-color:#262626;
    background-color:#191919;
    border-radius:16px;
    border-width:2px;
    border-style:solid;
}

QLineEdit#PostWindowCaptionInput {
    margin-left:12px;
    margin-top:12px;
    margin-right:12px;
    margin-bottom:0px;
}

QPushButton#PostWindowPostButton {
    margin:12px;
}

/*
    FEED WINDOW
*/

QScrollArea#FeedWindowScrollArea {
    margin:0px;
    background: transparent;
}

QScrollArea#FeedWindowScrollArea > QWidget > QWidget {
    background: transparent;
}

QWidget#FeedWindowScrollAreaHeader {
    margin-left:12px;
    margin-top:12px;
    margin-right:12px;
    margin-bottom:6px;
}

QFrame#FeedWindowScrollAreaFrame {
    border-color:#262626;
    background-color:#191919;
    border-radius:16px;
    border-width:2px;
    border-style:solid;
    margin-left:12px;
    margin-top:0px;
    margin-right:12px;
    margin-bottom:12px;
}

QLabel#FeedWindowScrollAreaCaptionLabel {
    margin-left:12px;
    margin-top:6px;
    margin-right:12px;
    margin-bottom:12px;
}